generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commendation {
  id String @id @default(uuid())
  message String
  date DateTime @default(now())
  recipient Member @relation(fields: [memberId], references: [id])
  memberId String 
  senderEmail String
  recipientEmail String
  notificationEmails String[]
}

model Member {
  id String @id @default(uuid())
  name String
  email String @unique
  team Team @relation(fields: [teamId], references: [id])
  teamId String
  phone String?
  commendations Commendation[]
}

model Team {
  id String @id @default(uuid())
  members Member[]
  name String
  imageURL String?
}