generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commendation {
  id String @id @default(uuid())
  message String
  date String
  recipient Member @relation(fields: [recipientEmail], references: [email])
  senderEmail String
  recipientEmail String
  notificationEmails String[]
}

model Member {
  name String
  email String @unique
  team String
  phone String?
  commendations Commendation[]
}