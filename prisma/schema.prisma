generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commendation {
  id                 String   @id
  message            String
  date               DateTime @default(now())
  notificationEmails String[]
  recipientId        String
  senderId           String
}

model Member {
  id       String  @id
  name     String
  email    String  @unique
  phone    String?
  imageURL String?
  team     Team[]
}

model Team {
  id       String   @id
  name     String
  imageURL String?
  member   Member[]
}
