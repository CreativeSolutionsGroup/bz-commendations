generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commendation {
  id                                      String   @id
  message                                 String
  date                                    DateTime @default(now())
  notificationEmails                      String[]
  recipientId                             String
  senderId                                String
  Member_Commendation_recipientIdToMember Member   @relation("Commendation_recipientIdToMember", fields: [recipientId], references: [id])
  Member_Commendation_senderIdToMember    Member   @relation("Commendation_senderIdToMember", fields: [senderId], references: [id])
}

model Member {
  id                                            String         @id
  name                                          String
  email                                         String         @unique
  phone                                         String?
  imageURL                                      String?
  Commendation_Commendation_recipientIdToMember Commendation[] @relation("Commendation_recipientIdToMember")
  Commendation_Commendation_senderIdToMember    Commendation[] @relation("Commendation_senderIdToMember")
  Team                                          Team[]
}

model Team {
  id       String   @id
  name     String
  imageURL String?
  Member   Member[]
}
