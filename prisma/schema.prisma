generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commendation {
  id                 String   @id @default(uuid())
  message            String
  date               DateTime @default(now())
  notificationIds String[]
  recipientId        String
  senderId           String
  recipient          Member   @relation("recipient", fields: [recipientId], references: [id])
  sender             Member   @relation("sender", fields: [senderId], references: [id])
}

model Member {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  phone         String?
  commendations Commendation[] @relation("recipient")
  commendments  Commendation[] @relation("sender")
  team          Team[]         
}

model Team {
  id       String   @id @default(uuid())
  name     String
  imageURL String?
  members  Member[] 
}
